---
const loomLink = new URL(
  'https://www.loom.com/share/b80c0523679246f1ae1aa0195e58ab51?sid=4cdb4b6f-1417-4abd-9222-99edcc36c1b7',
)

const loomUrl = loomLink.origin + loomLink.pathname
const videoId = loomLink.pathname.split('/').pop()

const thumbnail = `https://cdn.loom.com/sessions/thumbnails/${videoId}-with-play.gif`
const thumbnailVideo = `https://cdn.loom.com/sessions/thumbnails/${videoId}-00001.mp4#t=0.1`
const thumbnailJpeg = `https://cdn.loom.com/sessions/thumbnails/${videoId}-00001.jpg`
const embedSrc = loomLink.href.replace('share', 'embed')

console.log('loomLink', loomLink, videoId)
---

<div>
  <a href={loomUrl}>
    <p>Reihenfolge und Sortierung von Projekten und News - Watch Video</p>
  </a>
  <a href={loomUrl}>
    <img style="max-width:300px;" src={thumbnail} />
  </a>
  <a href={loomUrl}>
    <img style="max-width:300px;" src={thumbnailJpeg} />
  </a>
  <a
    href={loomUrl}
    style="max-width:300px;"
    class="flex aspect-16/9 justify-center overflow-hidden"
  >
    <video loop playsinline auto-start muted src={thumbnailVideo}> </video>
  </a>
</div>

<div>
  <div
    style="position: relative; padding-bottom: 62.391681109185434%; height: 0;"
  >
    <iframe
      src={embedSrc}
      allowfullscreen
      style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"
    ></iframe>
  </div>
</div>
